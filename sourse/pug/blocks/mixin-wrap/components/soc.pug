mixin item-sos(icon, a='#')
	+e.A.item(href= a target="_blank")
		if block
			block
		else
			+icon(icon)
//- social buttons
mixin soc()
	+b.soc&attributes(attributes)
		if block
			block
		else
			+item-sos('fb')
			+item-sos('twitter')
			+item-sos('vk')
			+item-sos('pencil')

